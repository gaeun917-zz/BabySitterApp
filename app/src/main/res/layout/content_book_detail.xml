<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFCCBC"
    android:orientation="vertical"

    android:paddingTop="20dp"
    tools:context=".sitter.SitterBookDetailActivity"
    tools:showIn="@layout/activity_sitter_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/air_ballon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="You can find a baby Sitter here"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/priceText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:outlineProvider="bounds">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/image_sitter"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/jacket101" />

                <TextView
                    android:id="@+id/sitter_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="Bubble Gum"
                    android:textColor="#303f9f"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/sitter_gender_book"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Gender"
                    android:textColor="#303f9f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sitter_gender_book2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="26"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sitter_age_book"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Age"
                    android:textColor="#303f9f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sitter_age_book2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="26"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sitter_bio_book"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Bio"
                    android:textColor="#303f9f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sitter_bio_book2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameText"
                    android:gravity="center"
                    android:text="music major and fluent french speaker "
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/sitter_skills_book"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Skills"
                    android:textColor="#303f9f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sitter_skills_book2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameText"
                    android:gravity="center"
                    android:text="able to teach a tab dance  "
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/sitter_quality"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Sitter Quality"
                    android:textColor="#303f9f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sitter_quality2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameText"
                    android:gravity="center"
                    android:text="understanding, funny, creative "
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/btnBookSitter"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/black_overlay"
                    android:layout_marginTop="20dp"
                    android:text="Book A Sitter"
                    android:textColor="@color/button_text" />

            </LinearLayout>

        </ScrollView>
</LinearLayout>
    </LinearLayout>