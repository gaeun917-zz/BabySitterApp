<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCBC"
    android:orientation="vertical"

    android:paddingTop="20dp"
    tools:context="com.example.gaeunlee.babysitter.ChildrenDetailActivity"
    tools:showIn="@layout/activity_child_detail"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baby_with_heart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Here is informaation about your child. Now, you are ready to book a baby sitter "
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="268dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_weight="0.36">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="291dp"
        android:layout_below="@+id/priceText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:outlineProvider="bounds">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_baby"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/jacket101" />

            <TextView
                android:id="@+id/child_name_baby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="Jake"
                android:textColor="#303f9f"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/birthday_baby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Birthday"
                android:textColor="#303f9f"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/birthday_baby2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="2000, 2, 20"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/interest_baby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Interesst"
                android:textColor="#303f9f"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/interest_baby2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:gravity="center"
                android:text="music and dance "
                android:textSize="15sp" />


            <TextView
                android:id="@+id/mealtime_baby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Meal time"
                android:textColor="#303f9f"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mealtime_baby2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:gravity="center"
                android:text="12:00, 3:00, 6:00 "
                android:textSize="15sp" />


            <TextView
                android:id="@+id/bath_time_baby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Bath Time "
                android:textColor="#303f9f"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bath_bed_time_baby2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:gravity="center"
                android:text="8:00"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/bed_time_baby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Bed Time "
                android:textColor="#303f9f"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bed_time_baby2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:gravity="center"
                android:text="10:00"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/allergies_baby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Allergies"
                android:textColor="#303f9f"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/allergies_baby2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameText"
                android:gravity="center"
                android:text="Gluton free, Nut Allergies, No Red Meat "
                android:textSize="15sp" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>

    <LinearLayout
        android:id="@+id/fullscreen_content_controls1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/black_overlay"
        android:orientation="vertical"
        android:gravity="bottom">


        <Button
            android:id="@+id/btnBookSitter_baby_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/black_overlay"
            android:text="Book A Sitter"
            android:textColor="@color/button_text" />

    </LinearLayout>


</LinearLayout>